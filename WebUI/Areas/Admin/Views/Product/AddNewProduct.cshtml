@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Domain.Constants
@model Application.Models.Product.ProductFilterModel

@{
    Layout = "_LayoutAdmin";
}

<!-- New Product Add Start -->
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-sm-8 m-auto">
                    <div class="card">
                        <div class="card-body">
                            <div class="card-header-2">
                                <h5>Thêm Mới Món Ăn</h5>
                            </div>

                            <form class="theme-form theme-form-2 mega-form">
                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-3 mb-0">
                                        Tên Món
                                    </label>
                                    <div class="col-sm-9">
                                        <input class="form-control" 
                                               type="text"
                                               id="ProductName"
                                               placeholder="Nhập tên món ăn">
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="col-sm-3 col-form-label form-label-title">
                                        Thể Loại Món Ăn
                                    </label>
                                    <div class="col-sm-9">
                                        <select 
                                            class="js-example-basic-single w-100" 
                                            id="Category"
                                            name="state">
                                            <option disabled>Chọn thể loại món ăn</option>
                                            @foreach (var item in Model.Categories)
                                            {
                                                <option value="@item.Id">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="form-label-title col-sm-3 mb-0">
                                        Giá Món Ăn
                                    </label>
                                    <div class="col-sm-9">
                                        <input class="form-control" 
                                               type="text"
                                               id="Amount"
                                               placeholder="Nhập giá món ăn">
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="col-sm-3 col-form-label form-label-title">
                                        Đơn Vị Giá
                                    </label>
                                    <div class="col-sm-9">
                                        <select 
                                            id="Unit"
                                            class="js-example-basic-single w-100">
                                            <option disabled>Chọn đơn vị giá</option>
                                            @foreach (var item in Model.Units)
                                            {
                                                <option value="@item.Id">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <div class="mb-4 row align-items-center">
                                    <label class="col-sm-3 col-form-label form-label-title">
                                        Hình Ảnh Món Ăn
                                    </label>
                                    <div class="col-sm-9">
                                        <img id="preview-image"
                                             class="img-fluid w-25 code-mega-border"
                                             src="@AppConst.DefaultAvatar"
                                             alt="Image"
                                             style="width: 250px !important; height: 250px !important">
                                        <input class="form-control form-choose"
                                               type="file"
                                               id="Image">
                                    </div>
                                </div>
                                
                                <button
                                    style="float: right"
                                    id="btn-add-new-product"
                                    class="btn btn-primary me-3">
                                    Thêm Mới
                                </button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<!-- New Product Add End -->

<script src="~/admin/js/product/add-new-product.js" asp-append-version="true"></script>