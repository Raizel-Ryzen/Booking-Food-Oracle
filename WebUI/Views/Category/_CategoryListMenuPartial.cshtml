@model List<Application.Models.Categories.CategoryDetailModel>

@{
    Layout = null;
}

<div class="row">
    @for (var i = 0; i < Model.Count; i += 5)
    {
        <div class="dropdown-column col-xl-3">
            @for (var j = i; j < i + 5 && j < Model.Count; j++)
            {
                <a class="dropdown-item" href="javascript:void(0)"
                   onclick="onClickCategory('@Model[j].Id', '@Model[j].Code', '@Model[j].Title')">
                    @Model[j].Title
                </a>
            }
        </div>
    }
</div>